FROM eclipse-temurin:21-jdk-jammy

WORKDIR /app

# Copier le wrapper Maven
COPY back/mvnw .
COPY back/.mvn .mvn

# Copier pom.xml et télécharger les dépendances
COPY back/pom.xml .
RUN ./mvnw dependency:go-offline

# Copier le code source
COPY back/src ./src

# Exposer le port
EXPOSE 8080

# Lancer avec Spring Boot DevTools pour hot reload et compilation automatique
ENTRYPOINT ["./mvnw", "spring-boot:run", "-Dspring-boot.run.fork=false", "-Dspring.devtools.restart.poll-interval=1000"]